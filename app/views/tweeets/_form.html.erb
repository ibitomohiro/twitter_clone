<%= form_with(model: @tweeet, local: true) do |form| %>
  <% if @tweeet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweeet.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @tweeet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="tweeet_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="tweeet_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "Tweeet一覧画面にもどる", tweeets_path %>