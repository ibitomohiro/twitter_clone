<h1>Tweeet 一覧</h1>
<table>
<tr>
  <th>内容</th>
</tr>
<% @tweeets.each do |tweeet| %>
<tr>
  <td><%= tweeet.content %></td>
  <td><%= link_to '詳細を確認する', tweeet_path(tweeet.id) %></td>
  <td><%= link_to 'Tweeetを編集する', edit_tweeet_path(tweeet.id), data: { confirm: '本当に編集していいですか？'} %></td>
  <td><%= link_to 'Tweeetを削除する', tweeet_path(tweeet.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
</tr>
<% end %>
</table>
<br>
<%= link_to '新しくブログを投稿する', new_tweeet_path %>
