<h2>Tweeet する</h2>
  <% render 'form' %>
<%= form_with(model: @tweeet, local: true, url: {action: 'confirm'}) do |form| %>
  <% if @tweeet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweeet.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @tweeet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
       <% end %>
      </ul>
    </div>
    <% end %>
  <div class="tweeet_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
  <% end %>
  