<header>
  <h1>Tweeet 一覧</h1>
  <p><%= notice %></p>
  <div class="tweeeter_bird">
      <%= image_tag'tweeeter_bird', width:'315' %>
  </div>
  <table>
  <tr>
    <th><h3>過去のTweeet内容</h3></th>
  </tr>
</header>
<body>
<% @tweeets.each do |tweeet| %>
<tr>
  <td><%= tweeet.content %></td>
  <td><%= link_to '詳細を確認する', tweeet_path(tweeet.id) %></td>
  <td><%= link_to 'Tweeetを編集する', edit_tweeet_path(tweeet.id), data: { confirm: '本当に編集していいですか？'} %></td>
  <td><%= link_to 'Tweeetを削除する', tweeet_path(tweeet.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
</tr>
<% end %>
</table>
<br>
<%= link_to '新しくTweeet を投稿する', new_tweeet_path, class: "btn btn-primary" %>
</body>
<footer>
  <p class="copyright">&copy; 2020 ibitomoTweeeter inc </p>
</footer>